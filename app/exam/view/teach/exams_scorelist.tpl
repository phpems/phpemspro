{x2;include:header}<body>{x2;include:nav}<div class="container-fluid">	<div class="row-fluid">		<div class="pep">			<div class="col-xs-2 leftmenu">                {x2;include:menu}			</div>			<div class="col-xs-10" id="datacontent">				<ol class="breadcrumb">					<li><a href="index.php?{x2;$_route['app']}-teach">教师管理</a></li>					<li><a href="index.php?{x2;$_route['app']}-teach-exams">考试管理</a></li>					<li><a href="index.php?{x2;$_route['app']}-teach-exams-basics&subjectid={x2;$subject['subjectid']}">{x2;$subject['subjectname']}</a></li>					<li class="active">{x2;$basic['basic']}</li>				</ol>				<div class="panel panel-default">					<div class="panel-heading">						成绩统计					</div>					<div class="panel-body">						<form action="index.php?exam-teach-exams-scorelist&basicid={x2;$basic['basicid']}" method="post">							<table class="table form-inline">								<tr>									<td style="border-top:0px;">										考试时间：									</td>									<td style="border-top:0px;">										<input class="form-control datetimepicker" data-date="{x2;date:TIME,'Y-m-d'}" data-date-format="yyyy-mm-dd" type="text" name="search[stime]" size="10" id="stime" value="{x2;$search['stime']}"/> - <input class="form-control datetimepicker" data-date="{x2;date:TIME,'Y-m-d'}" data-date-format="yyyy-mm-dd" size="10" type="text" name="search[etime]" id="etime" value="{x2;$search['etime']}"/>									</td>									<td style="border-top:0px;">										分数段：									</td>									<td style="border-top:0px;">										<input class="form-control" name="search[sscore]" id="sscore" type="text" value="{x2;$search['sscore']}"/> - <input class="form-control" type="text" name="search[escore]" id="escore" value="{x2;$search['escore']}"/>									</td>								</tr>								<tr>									<td>										试卷：									</td>									<td>										<select name="search[paperid]" class="form-control">											<option value="0">不限</option>                                            {x2;tree:$papers,ep,eid}											<option value="{x2;v:ep['paperid']}"{x2;if:$search['paperid'] == v:ep['paperid']} selected{x2;endif}>{x2;v:ep['papername']}</option>                                            {x2;endtree}										</select>									</td>									<td>									</td>									<td>										<button class="btn btn-primary" type="submit">提交</button>										<a class="btn btn-info" href="index.php?exam-teach-exams-stats&basicid={x2;$basic['basicid']}{x2;$u}">统计</a>										<a class="ajax btn btn-danger" href="index.php?exam-teach-exams-outscore&basicid={x2;$basic['basicid']}{x2;$u}">导出</a>									</td>								</tr>							</table>							<div class="input">								<input type="hidden" value="1" name="search[argsmodel]" />							</div>						</form>						<table class="table table-hover table-bordered">							<thead>							<tr class="info">								<th width="60">ID</th>								<th width="160">用户名</th>                                {x2;tree:$fields,field,fid}								<th>{x2;v:field['fieldtitle']}</th>                                {x2;endtree}								<th width="80">分数</th>								<th>试卷名称</th>								<th width="180">考试时间</th>								<th width="160">考试用时</th>								<th width="60">阅卷</th>							</tr>							</thead>							<tbody>                            {x2;tree:$scores['data'],score,eid}							<tr{x2;if:v:score['ehneedresit']} class="text-danger"{x2;endif}>								<td>                                    {x2;v:score['ehid']}								</td>								<td>                                    {x2;v:score['ehusername']}								</td>                                {x2;tree:$fields,field,fid}								<th>{x2;v:score[v:field['field']]}</th>                                {x2;endtree}								<td>                                    {x2;v:score['ehscore']}								</td>								<td>                                    {x2;v:score['ehexam']}								</td>								<td>                                    {x2;v:score['ehstarttime']}								</td>								<td>                                    {x2;if:v:score['ehtime'] >= 60}{x2;if:v:score['ehtime']%60}{x2;eval: echo intval(v:score['ehtime']/60)+1}{x2;else}{x2;eval: echo intval(v:score['ehtime']/60)}{x2;endif}分钟{x2;else}{x2;v:score['ehtime']}秒{x2;endif}								</td>								<td>									<a href="index.php?exam-teach-exams-paperview&ehid={x2;v:score['ehid']}">查看</a>								</td>							</tr>                            {x2;endtree}							</tbody>						</table>                        {x2;if:$scores['pages']}						<ul class="pagination pull-right">                            {x2;$scores['pages']}						</ul>                        {x2;endif}					</div>				</div>			</div>		</div>	</div></div>{x2;include:footer}</body></html>