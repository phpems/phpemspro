{x2;include:header}<body>{x2;include:nav}<div class="container-fluid">	<div class="row-fluid">		<div class="pep">			<div class="col-xs-2 leftmenu">                {x2;include:menu}			</div>			<div class="col-xs-10" id="datacontent">				<ol class="breadcrumb">					<li><a href="index.php?{x2;$_route['app']}-master">{x2;$apps[$_route['app']]['appname']}</a></li>					<li class="active">模块设置</li>				</ol>				<div class="panel panel-default">					<div class="panel-heading">模块设置</div>					<div class="panel-body">						<form action="index.php?user-master-setting" method="post" class="form-horizontal" style="padding-top:10px;margin-bottom:0px;">							<div class="form-group">								<label class="col-sm-2 control-label">注册选项：</label>								<div class="col-sm-10">									<label class="radio-inline">										<input name="args[closeregist]" type="radio" value="0" {x2;if:!$setting['closeregist']}checked{x2;endif}/>开启注册									</label>									<label class="radio-inline">										<input name="args[closeregist]" type="radio" value="1" {x2;if:$setting['closeregist']}checked{x2;endif}/>关闭注册									</label>								</div>							</div>							<div class="form-group">								<label class="col-sm-2 control-label">注册模式：</label>								<div class="col-sm-10">									<label class="radio-inline">										<input name="args[registype]" type="radio" value="0" {x2;if:!$setting['registype']}checked{x2;endif}/>经典模式									</label>									<label class="radio-inline">										<input name="args[registype]" type="radio" value="1" {x2;if:$setting['registype']}checked{x2;endif}/>自定义模式									</label>								</div>							</div>							<div class="form-group">								<label class="col-sm-2 control-label">管理员权限：</label>								<div class="col-sm-10">									<label class="radio-inline">										<input name="args[managemodel]" type="radio" value="0" {x2;if:!$setting['managemodel']}checked{x2;endif}/>关闭权限区分									</label>									<label class="radio-inline">										<input name="args[managemodel]" type="radio" value="1" {x2;if:$setting['managemodel']}checked{x2;endif}/>开启权限区分									</label>									<span class="help-block">关闭权限区分后，所有管理员权限相同；开启权限区分后，管理员权限根据设置不同而不同。</span>								</div>							</div>							<div class="form-group">								<label class="col-sm-2 control-label">登录选项：</label>								<div class="col-sm-10">									<label class="radio-inline">										<input name="args[loginmodel]" type="radio" value="0" {x2;if:!$setting['loginmodel']}checked{x2;endif}/>不限登录									</label>									<label class="radio-inline">										<input name="args[loginmodel]" type="radio" value="1" {x2;if:$setting['loginmodel']}checked{x2;endif}/>后登陆踢掉已登录者									</label>								</div>							</div>							<div class="form-group">								<label class="col-sm-2 control-label">邮箱验证：</label>								<div class="col-sm-10">									<label class="radio-inline">										<input name="args[emailverify]" type="radio" value="0" {x2;if:!$setting['emailverify']}checked{x2;endif}/>不开启									</label>									<label class="radio-inline">										<input name="args[emailverify]" type="radio" value="1" {x2;if:$setting['emailverify']}checked{x2;endif}/>开启									</label>									<span class="help-block">目前仅支持QQ邮箱验证，需要支持SSL收发。</span>								</div>							</div>							<div class="form-group">								<label for="seo_title" class="col-sm-2 control-label">QQ邮箱用户名：</label>								<div class="col-sm-9">									<input id="seo_title" class="form-control" name="args[emailaccount]" type="text" value="{x2;$setting['emailaccount']}"/>								</div>							</div>							<div class="form-group">								<label for="seo_keywords" class="col-sm-2 control-label">QQ邮箱密码：</label>								<div class="col-sm-9">									<input id="seo_keywords" class="form-control" name="args[emailpassword]" type="text" value="{x2;$setting['emailpassword']}"/>								</div>							</div>							<div class="form-group">								<label for="regfields" class="col-sm-2 control-label">注册所需字段：</label>								<div class="col-sm-9">									<textarea id="regfields" class="form-control" name="args[regfields]" class="input-xxlarge">{x2;$setting['regfields']}</textarea>								</div>							</div>							<div class="form-group">								<label for="seo_description" class="col-sm-2 control-label"></label>								<div class="col-sm-9">									<button class="btn btn-primary" type="submit">提交</button>									<input type="hidden" name="page" value="{x2;$page}"/>									<input type="hidden" name="setting" value="1"/>                                    {x2;tree:$search,arg,aid}									<input type="hidden" name="search[{x2;v:key}]" value="{x2;v:arg}"/>                                    {x2;endtree}								</div>							</div>						</form>					</div>				</div>			</div>		</div>	</div></div>{x2;include:footer}</body></html>