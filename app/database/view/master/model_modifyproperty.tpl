{x2;include:header}<body>{x2;include:nav}<div class="container-fluid">	<div class="row-fluid">		<div class="pep">			<div class="col-xs-2 leftmenu">				{x2;include:menu}			</div>			<div class="col-xs-10" id="datacontent">				<ol class="breadcrumb">					<li><a href="index.php?{x2;$_route['app']}-master">{x2;$apps[$_route['app']]['appname']}</a></li>					<li><a href="index.php?{x2;$_route['app']}-master-model">模型管理</a></li>					<li><a href="index.php?{x2;$_route['app']}-master-model-properties&modelcode={x2;$model['modelcode']}">模型属性</a></li>					<li class="active">修改属性</li>				</ol>				<div class="panel panel-default">					<div class="panel-heading">修改属性</div>					<div class="panel-body">						<form action="index.php?database-master-model-modifyproperty" method="post" class="form-horizontal">							<fieldset>								<div class="form-group">									<label for="fieldtitle" class="control-label col-sm-2">属性名：</label>									<div class="col-sm-3">										<input type="text" value="{x2;$property['ppyname']}" class="form-control" size="40" name="args[ppyname]" needle="needle" datatype="userName" id="fieldtitle" msg="您必须填写属性名"/>									</div>								</div>								<div class="form-group">									<label for="fieldtype" class="control-label col-sm-2">绑定字段：</label>									<div class="col-sm-3">										<select class="form-control" id="ppyfield" name="args[ppyfield]">											{x2;tree:$fields,field,fid}											{x2;if:!in_array(v:field['Field'],$usedfields)}											<option value="{x2;v:field['Field']}"{x2;if:v:field['Field'] == $property['ppyfield']} selected{x2;endif}>{x2;v:field['Field']}</option>											{x2;endif}											{x2;endtree}										</select>									</div>								</div>								<div class="form-group">									<label for="fieldhtmltype" class="control-label col-sm-2">HTML类型：</label>									<div class="col-sm-3">										<select class="form-control combox" name="args[ppyhtmltype]" id="ppyhtmltype">											<option value="text"{x2;if:$property['ppyhtmltype'] == 'text'} selected{x2;endif}>文本域(text)</option>											<option value="select"{x2;if:$property['ppyhtmltype'] == 'select'} selected{x2;endif}>下拉菜单/选择框(select)</option>											<option value="radio"{x2;if:$property['ppyhtmltype'] == 'radio'} selected{x2;endif}>单选框(radio)</option>											<option value="checkbox"{x2;if:$property['ppyhtmltype'] == 'checkbox'} selected{x2;endif}>复选框组(checkbox)</option>											<option value="textarea"{x2;if:$property['ppyhtmltype'] == 'textarea'} selected{x2;endif}>文本区域(textarea)</option>											<option value="editor"{x2;if:$property['ppyhtmltype'] == 'editor'} selected{x2;endif}>编辑器(editor)</option>											<option value="thumb"{x2;if:$property['ppyhtmltype'] == 'thumb'} selected{x2;endif}>缩略图上传(thumb)</option>											<option value="picture"{x2;if:$property['ppyhtmltype'] == 'picture'} selected{x2;endif}>组图上传(picture)</option>											<option value="videotext"{x2;if:$property['ppyhtmltype'] == 'videotext'} selected{x2;endif}>文件上传(videotext)</option>											<option value="hidden"{x2;if:$property['ppyhtmltype'] == 'hidden'} selected{x2;endif}>隐藏(hidden)</option>										</select>									</div>								</div>								<div class="form-group">									<label for="fieldhtmlproperty" class="control-label col-sm-2">HTML属性：</label>									<div class="col-sm-9">										<textarea class="form-control" rows="7" cols="4" name="args[ppyproperty]" id="ppyproperty">{x2;$property['ppyproperty']}</textarea>										<span class="help-block">每行一个，等号隔开，如：style=width:100px;如果需要对表单内容进行验证请查看《表单验证属性》进行配置</span>									</div>								</div>								<div class="form-group">									<label for="fieldvalues" class="control-label col-sm-2">可选值列表：</label>									<div class="col-sm-9">										<textarea class="form-control" rows="7" cols="4" name="args[ppyvalue]" id="ppyvalue">{x2;$property['ppyvalue']}</textarea>										<span class="help-block">每行一个，等号隔开，如：属性=值;</span>									</div>								</div>								<div class="form-group">									<label for="fielddefault" class="control-label col-sm-2">默认值：</label>									<div class="col-sm-3">										<input class="form-control" type="text" size="40" name="args[ppydefault]" id="fielddefault" value="{x2;$property['ppydefault']}"/>									</div>								</div>								<div class="form-group">									<label for="fielddefault" class="control-label col-sm-2">数据源：</label>									<div class="col-sm-9">										<textarea class="form-control" type="text" size="40" name="args[ppysource]" id="ppysource">{x2;$property['ppysource']}</textarea>										<span class="help-block">将使用SQL根据语句规则来获取数据。</span>									</div>								</div>								<div class="form-group">									<label class="control-label col-sm-2">禁止修改：</label>									<div class="col-sm-9">										<label class="checkbox-inline">											<input type="checkbox" name="args[ppyaccess][]" value="-1"{x2;if:in_array('-1',$property['ppyaccess'])} checked{x2;endif}/> 本人										</label>										<label class="checkbox-inline">											<input type="checkbox" name="args[ppyaccess][]" value="1"{x2;if:in_array('1',$property['ppyaccess'])} checked{x2;endif}/> 管理员										</label>									</div>								</div>								<div class="form-group">									<label class="control-label col-sm-2">系统属性：</label>									<div class="col-sm-9">										<label class="radio-inline">											<input type="radio" name="args[ppysystem]" value="1"{x2;if:$property['ppysystem']} checked{x2;endif}/> 作为系统属性										</label>										<label class="radio-inline">											<input type="radio" name="args[ppysystem]" value="0"{x2;if:!$property['ppysystem']} checked{x2;endif}/> 作为普通属性										</label>										<span class="help-block">系统属性不能被删除</span>									</div>								</div>								<div class="form-group">									<label for="fielddescribe" class="control-label col-sm-2">属性描述：</label>									<div class="col-sm-9">										<textarea class="form-control" rows="7" cols="4" name="args[ppyintro]" id="ppyintro">{x2;$property['ppyintro']}</textarea>									</div>								</div>								<div class="form-group">									<label for="fielddescribe" class="control-label col-sm-2"></label>									<div class="col-sm-9">										<button class="btn btn-primary" type="submit">提交</button>										<input type="hidden" name="submit" value="1">										<input type="hidden" name="page" value="{x2;$page}">										<input type="hidden" name="modifyproperty" value="1"/>										<input type="hidden" name="ppyid" value="{x2;$property['ppyid']}"/>									</div>								</div>							</fieldset>						</form>					</div>				</div>			</div>		</div>	</div></div>{x2;include:footer}</body></html>