{x2;globaltpl:ad_header}<body><div class="container-fluid">	<div class="row-fluid">		<div class="pep">			<div id="datacontent">				<ol class="breadcrumb">					<li><a href="index.php?{x2;$_route['app']}-master-model">模型管理</a></li>					<li class="active">增加模型</li>				</ol>				<div class="panel panel-default">					<div class="panel-heading">增加模型</div>					<div class="panel-body">						<form action="index.php?database-master-model-add" method="post" class="form-horizontal">							<fieldset>								<div class="form-group">									<label for="questype" class="control-label col-sm-2">模型代码：</label>									<div class="col-sm-6">										<input class="form-control" name="args[modelcode]" type="text" size="20" value="" alt="请输入模型代码" needle="needle" msg="请输入模型代码"/>									</div>								</div>								<div class="form-group">									<label for="questype" class="control-label col-sm-2">模型名称：</label>									<div class="col-sm-6">										<input class="form-control" name="args[modelname]" type="text" size="20" value="" alt="请输入模型名称" needle="needle" msg="请输入模型名称"/>									</div>								</div>								<div class="form-group">									<label for="questype" class="control-label col-sm-2">数据库：</label>									<div class="col-sm-10 form-inline">										<select name="args[modeldb]" needle="needle" refUrl="index.php?database-master-model-gettables&dbid={value}" class="form-control combox" target="modeltable">											<option value="">请选择数据库</option>                                            {x2;tree:$databases,db,did}											<option value="{x2;v:key}">{x2;v:db['host']}/{x2;v:db['name']}</option>                                            {x2;endtree}										</select>									</div>								</div>								<div class="form-group">									<label for="questype" class="control-label col-sm-2">绑定表：</label>									<div class="col-sm-10 form-inline">										<select name="args[modeltable]" needle="needle" class="form-control" id="modeltable">											<option value="">请先选择数据库</option>										</select>									</div>								</div>								<div class="form-group">									<label for="questype" class="control-label col-sm-2">模块：</label>									<div class="col-sm-10 form-inline">										<select name="args[modelapp]" needle="needle" class="form-control">											<option value="">请选择模块</option>											{x2;tree:$apps,app,aid}											<option value="{x2;v:app['appcode']}">{x2;v:app['appname']}</option>											{x2;endtree}										</select>									</div>								</div>								<div class="form-group">									<label for="questype" class="control-label col-sm-2">模型描述：</label>									<div class="col-sm-6">										<input class="form-control" name="args[modelintro]" type="text" size="30" needle="needle" alt="请输入模型描述" />									</div>								</div>								<div class="form-group">									<label for="questchoice" class="control-label col-sm-2"></label>									<div class="col-sm-9">										<button class="btn btn-primary" type="submit">提交</button>										<input type="hidden" name="addmodel" value="1"/>                                        {x2;tree:$search,arg,aid}										<input type="hidden" name="search[{x2;v:key}]" value="{x2;v:arg}"/>                                        {x2;endtree}									</div>								</div>							</fieldset>						</form>					</div>				</div>			</div>		</div>	</div></div></body></html>