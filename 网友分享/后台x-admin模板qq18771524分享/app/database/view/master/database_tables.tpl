{x2;globaltpl:ad_header}<body><div class="container-fluid">	<div class="row-fluid">		<div class="pep">			<div id="datacontent">				<ol class="breadcrumb">					<li><a href="index.php?{x2;$_route['app']}-master-database">分库管理</a></li>					<li class="active">数据表</li>				</ol>				<div class="panel panel-default">					<div class="panel-heading">数据表（{x2;$dbid}）</div>					<div class="panel-body">						<table class="table table-striped table-bordered">							<tr>								<th width="160">表名</th>								<th>备注</th>								{x2;if:$dbid == 'default'}								<th width="100">操作</th>								{x2;else}								<th width="140">操作</th>								{x2;endif}							</tr>							{x2;if:$tables}							{x2;tree:$tables,table,tid}							<tr>                                {x2;eval: v:table = current(v:table)}								<td>{x2;v:table}</td>								<td>{x2;$intros[v:table]['dbintro']}</td>								<td>									<ul class="list-unstyled list-inline">                                        {x2;if:$dbid != 'default'}										<li><a href="index.php?{x2;$_route['app']}-master-database-synch&dbid={x2;$dbid}&table={x2;v:table}">同步</a></li>                                        {x2;endif}										<li><a href="index.php?{x2;$_route['app']}-master-database-fields&dbid={x2;$dbid}&table={x2;v:table}">字段</a></li>										<li><a href="index.php?{x2;$_route['app']}-master-database-intro&dbid={x2;$dbid}&table={x2;v:table}">设置</a></li>									</ul>								</td>							</tr>							{x2;endtree}							{x2;else}							<tr>								<td colspan="3">数据库不存在或该数据库下无表</td>							</tr>							{x2;endif}						</table>					</div>				</div>			</div>		</div>	</div></div></body></html>