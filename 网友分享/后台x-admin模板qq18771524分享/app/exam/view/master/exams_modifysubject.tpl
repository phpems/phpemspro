{x2;globaltpl:ad_header}<body><div class="container-fluid">	<div class="row-fluid">		<div class="pep">			<div id="datacontent">				<ol class="breadcrumb">					<li><a href="index.php?{x2;$_route['app']}-master-exams">考试管理</a></li>					<li class="active">修改科目</li>				</ol>				<div class="panel panel-default">					<div class="panel-heading">修改科目</div>					<div class="panel-body">						<form action="index.php?exam-master-exams-modifysubject" method="post" class="form-horizontal">							<fieldset>								<div class="form-group">									<label for="questype" class="control-label col-sm-2">名称：</label>									<div class="col-sm-4">										<input class="form-control" name="args[subjectname]" type="text" size="30" value="{x2;$subject['subjectname']}" needle="needle" alt="请输入科目名称" />									</div>								</div>								<div class="form-group">									<label for="questsort" class="control-label col-sm-2">数据库：</label>									<div class="col-sm-4">										<select class="form-control" id="subjectdb" name="args[subjectdb]">                                            {x2;tree:$databases,db,did}											<option value="{x2;v:key}"{x2;if:$subject['subjectdb'] == v:key} selected{x2;endif}>{x2;v:db['host']}/{x2;v:db['name']}</option>											{x2;endtree}										</select>									</div>								</div>								<div class="form-group">									<label for="questype" class="control-label col-sm-2">培训类型：</label>									<div class="col-sm-4">										<select class="form-control" name="args[subjecttrid]">                                            {x2;tree:$trainings,training,tid}											<option value="{x2;v:training['trid']}"{x2;if:$subject['subjecttrid'] == v:training['trid']} selected{x2;endif}>{x2;v:training['trname']}</option>                                            {x2;endtree}										</select>									</div>								</div>								<div class="form-group">									<label for="subject" class="control-label col-sm-2">科目题型：</label>									<div class="col-sm-9">                                        {x2;tree:$questypes,questype,qid}										<label class="checkbox-inline">											<input type="checkbox" name="args[subjectsetting][]" value="{x2;v:questype['questcode']}"{x2;if:in_array(v:questype['questcode'],$subject['subjectsetting'])} checked{x2;endif}/> {x2;v:questype['questype']}										</label>                                        {x2;endtree}									</div>								</div>								<div class="form-group">									<label for="outfields" class="col-sm-2 control-label">科目介绍：</label>									<div class="col-sm-9">										<textarea id="subjectintro" class="form-control pepeditor" name="args[subjectintro]">{x2;$subject['subjectintro']}</textarea>									</div>								</div>								<div class="form-group">									<label for="questchoice" class="control-label col-sm-2"></label>									<div class="col-sm-9">										<button class="btn btn-primary" type="submit">提交</button>										<input type="hidden" name="modifysubject" value="1"/>										<input type="hidden" name="subjectid" value="{x2;$subject['subjectid']}"/>									</div>								</div>							</fieldset>						</form>					</div>				</div>			</div>		</div>	</div></div></body></html>