{x2;globaltpl:ad_header}<body><div class="container-fluid">	<div class="row-fluid">		<div class="pep">			<div id="datacontent">				<ol class="breadcrumb">					<li><a href="index.php?{x2;$_route['app']}-master-setting-questype">题型设置</a></li>					<li class="active">修改题型</li>				</ol>				<div class="settingbar">					<a href="index.php?exam-master-setting" class="btn btn-default">基本设置</a>					<a href="index.php?exam-master-setting-training" class="btn btn-default">培训类型</a>					<a href="index.php?exam-master-setting-questype" class="btn btn-primary">题型设置</a>				</div>				<div class="panel panel-default">					<div class="panel-heading">修改题型</div>					<div class="panel-body">						<form action="index.php?exam-master-setting-modifyquestype" method="post" class="form-horizontal">							<fieldset>								<div class="form-group">									<label for="questype" class="control-label col-sm-2">题型代码：</label>									<div class="col-sm-4">										<input class="form-control" name="args[questype]" id="questype" type="text" size="30" value="{x2;$questype['questcode']}" needle="needle" alt="请输入题型代码" disabled/>										<span class="help-block">题型代码不能修改</span>									</div>								</div>								<div class="form-group">									<label for="questype" class="control-label col-sm-2">题型名称：</label>									<div class="col-sm-4">										<input class="form-control" name="args[questype]" id="questype" type="text" size="30" value="{x2;$questype['questype']}" needle="needle" alt="请输入题型名称" />									</div>								</div>								<div class="form-group">									<label for="questsort" class="control-label col-sm-2">题型分类：</label>									<div class="col-sm-4">										<select class="form-control combox" id="questsort" name="args[questsort]" onchange="javascript:if($(this).val() == '1')$('#choicebox').hide();else $('#choicebox').show();">											<option value="1"{x2;if:$questype['questsort']} selected{x2;endif}>主观题</option>											<option value="0"{x2;if:!$questype['questsort']} selected{x2;endif}>客观题</option>										</select>									</div>								</div>								<div id="choicebox" class="form-group"{x2;if:$questype['questsort']} style="display:none;"{x2;endif}>									<label for="questchoice" class="control-label col-sm-2">选项分类：</label>									<div class="col-sm-6">										<select class="form-control combox" name="args[questchoice]" id="questchoice">											<option value="1"{x2;if:$questype['questchoice']==1} selected{x2;endif}>单选</option>											<option value="2"{x2;if:$questype['questchoice']==2} selected{x2;endif}>多选</option>											<option value="3"{x2;if:$questype['questchoice']==3} selected{x2;endif}>不定项选</option>											<option value="4"{x2;if:$questype['questchoice']==4} selected{x2;endif}>判断</option>											<option value="5"{x2;if:$questype['questchoice']==5} selected{x2;endif}>定值填空题</option>										</select>										<span class="help-block">不定项选按照选对答案数给分，判断题将自动生成判断选项。</span>									</div>								</div>								<div class="form-group">									<label for="questchoice" class="control-label col-sm-2"></label>									<div class="col-sm-9">										<button class="btn btn-primary" type="submit">提交</button>										<input type="hidden" name="modifyquestype" value="1"/>										<input type="hidden" name="questid" value="{x2;$questype['questid']}"/>									</div>								</div>							</fieldset>						</form>					</div>				</div>			</div>		</div>	</div></div></body></html>